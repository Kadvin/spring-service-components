<included>
    <jmxConfigurator/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{dd HH:mm:ss.SSS} [%thread] %-5level %-25c{0} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="ch.qos.logback" level="ERROR"/>
    <logger name="org" level="INFO"/>
    <logger name="com" level="INFO"/>
    <logger name="net" level="INFO"/>
    <logger name="DataNucleus" level="WARN"/>
    <logger name="org.apache" level="INFO"/>
    <logger name="org.apache.commons.httpclient" level="ERROR"/>
    <logger name="net.sf.oval.internal" level="ERROR"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="net.happyonroad.spring" level="WARN"/>
    <logger name="com.mchange.v2" level="ERROR"/>
    <logger name="com.mchange.v2.resourcepool.BasicResourcePool" level="ERROR"/>
    <logger name="com.mchange.v2.c3p0" level="ERROR"/>

    <logger name="net.happyonroad" level="INFO"/>
    <logger name="net.happyonroad.component.container.support.DefaultComponentRepository" level="WARN" />
    <logger name="net.happyonroad.platform.repository.support.MybatisRepositoryScanner" level="ERROR" />
    <logger name="net.happyonroad.platform.web.support.ExtendedRequestMappingHandlerMapping" level="WARN" />
    <logger name="net.happyonroad.platform.services.MybatisFeatureResolver" level="WARN" />
    <logger name="net.happyonroad.platform.services.SpringMvcFeatureResolver" level="WARN" />
    <logger name="net.happyonroad.spring.support.DefaultServiceRegistry" level="WARN" />

    <logger name="dnt.monitor.server.repository" level="DEBUG"/>
    <logger name="dnt.monitor.server.dynamic" level="DEBUG"/>

</included>
